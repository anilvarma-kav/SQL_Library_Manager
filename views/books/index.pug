extends ../layout

block content
    header
        h1=title
    p
        a.button(href='/books/newbook') Create New Book
    table
        thead
            tr
                th Title
                th Author
                th Genre
                th Year
        tbody
            each book in books
               tr
                    td
                        a(href="/books/"+book.id+"/details")=book.title
                    td=book.author
                    td=book.genre
                    td=book.year